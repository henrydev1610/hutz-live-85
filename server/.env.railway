
# Railway Environment Variables
NODE_ENV=production
PORT=8080

# CommonJS Configuration
NPM_CONFIG_PRODUCTION=false
NODE_OPTIONS=--max-old-space-size=1024

# Frontend URLs - UPDATE THESE WITH YOUR RAILWAY URLS
FRONTEND_URL=https://your-frontend-url.railway.app
APP_DOMAIN=https://your-backend-url.railway.app

# CORS Configuration
CORS_ORIGIN=https://your-frontend-url.railway.app,https://your-backend-url.railway.app

# WebSocket Configuration
WEBSOCKET_URL=wss://your-backend-url.railway.app

# Optional: Redis Configuration
# REDIS_URL=redis://your-redis-url

# Optional: STUN/TURN Servers
STUN_SERVERS=["stun:stun.l.google.com:19302","stun:stun1.l.google.com:19302"]
# TURN_SERVERS=[{"urls":"turn:your-turn-server","username":"user","credential":"pass"}]

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=300

# Logging
LOG_LEVEL=info
DEBUG=socket.io:*

# Twilio Configuration (configurar no Railway)
TWILIO_ACCOUNT_SID=${{TWILIO_ACCOUNT_SID}}
TWILIO_API_KEY=${{TWILIO_API_KEY}}
TWILIO_API_SECRET=${{TWILIO_API_SECRET}}
