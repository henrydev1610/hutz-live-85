
# Configurações do servidor
NODE_ENV=development
PORT=3001

# URL do frontend (para CORS)
FRONTEND_URL=https://hutz-live-85.onrender.com

# Domínio da aplicação (para gerar URLs completas)
APP_DOMAIN=https://hutz-live-85.onrender.com

# Origens permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=https://hutz-live-85.onrender.com,https://preview--hutz-live-85.lovable.app,https://server-hutz-live.onrender.com,http://localhost:8080,http://localhost:5173,https://*.lovable.app
# Servidores STUN (formato JSON array)
STUN_SERVERS=["stun:stun.l.google.com:19302", "stun:stun1.l.google.com:19302"]

# Servidores TURN (formato JSON array) - Opcional
# TURN_SERVERS=[{"urls": "turn:your-turn-server.com:3478", "username": "user", "credential": "pass"}]

# Redis URL para escalabilidade (opcional)
# REDIS_URL=redis://localhost:6379

# Configurações de segurança
# JWT_SECRET=your-jwt-secret-here

# Configurações do coturn (se usar coturn local)
# COTURN_URL=turn:localhost:3478
# COTURN_USERNAME=coturn_user
# COTURN_CREDENTIAL=coturn_password

# Configurações do LiveKit (alternativa ao coturn)
# LIVEKIT_URL=wss://your-project.livekit.cloud
# LIVEKIT_API_KEY=your-api-key
# LIVEKIT_SECRET_KEY=your-secret-key
